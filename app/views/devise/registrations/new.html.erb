<body style="background-image:url(<%= asset_path '/images/b5.jpg' %>);">

<center>
<h2 style="text-shadow: -1px -1px 2px rgba(0,0,0,0.6),-2px -2px 1px rgba(0,0,0,0.6),-2px -2px 2px rgba(0,0,0,0.6),-3px -3px 2px rgba(0,0,0,0.6);font-size:3em;font-family:cursive;color:lawngreen;">Registeration</h2></center>
    <center>
<div style="margin:20px auto;width:70%;">
     
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :Name , :style => "color: yellow;"%><br />
    <%= f.text_field :name, autofocus: true,placeholder:"Enter Your Name",class: "form-control" %><br>
      
      
    <%= f.label :Email, :style => "color: yellow;" %><br />
    <%= f.email_field :email, autofocus: true,placeholder:"Your Email",class: "form-control" %><br>
      
    <%= f.label :Address, :style => "color: yellow;" %><br />
    <%= f.text_field :address, autofocus: true,placeholder:"Your address",class: "form-control" %><br>
  
  
    <%= f.label :Password , :style => "color: yellow;"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",class: "form-control" %><br>

  
    <%= f.label :Password_confirmation, :style => "color: yellow;" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %><br>
  </div>
    <div class="form-group">
        <div class="row">
                <div class="col-md-6">
                       <%= f.label :Phone, :style => "color: yellow;" %><br />
    <%= f.text_field :phone, autofocus: true,placeholder:"Phone Number",class: "form-control" %><br>
                </div>
                <div class="col-md-3">
                
        
    <%= f.label :City, :style => "color: yellow;" %><br />
    <%= f.text_field :city, autofocus: true,placeholder:"City",class: "form-control" %><br>
                </div>
                <div class="col-md-3">
                       <%= f.label :Postalcode, :style => "color: yellow;" %><br />
    <%= f.text_field :postal_code, autofocus: true,placeholder:"Postal Code",class: "form-control" %><br>
                </div>
        </div>
        
            <%= f.label :Country, :style => "color: yellow;" %><br />
   <%=f.country_select :country,class:"form-control"%><br><br>

    <%= f.submit "Sign Up Now!",class: "btn btn-success btn-lg" %>
    </div>

<% end %>
</div>
  </center>  
</body>
