 <body style="background-image:url(<%= asset_path '/images/b2.jpg' %>);">
<div class="container">
    <div class="row">
        <div class="col-mid-2 col-lg-2">
            <div class="panel panel-default panel-list">
                <div class="panel-heading">
                    <h3 class="panel-title">
                    Available Categories
                    </h3>
                </div>
                <ul class="list-group">
                    <li class="list-group-item">Gaming console</li>
                    <li class="list-group-item">PS4</li>
                    <li class="list-group-item">XBOX One</li>
                    <li class="list-group-item">PC</li>
                </ul>  
            </div>
        </div>
    <div class="col-mid-10 col-lg-10">
        <div class="panel panel-default panel-list">
            <div class="panel-heading panel-heading-green">
                    <h3 class="panel-title">
                    <center>The Products In Demand</center>
                    </h3>
            </div>
            <div class="panel-body" style="background-image:url(<%= asset_path 'images/d.jpg' %>;">
            <% @products.in_groups_of(4, false).each do |group| %>
             <div class="row"> 
          <% group.each do |product| %>
            <div class="col-lg-3 col-lg-offset-2 col-md-3 col-sm-offset-0 col-sm-6 col-xs-8 col-xs-offset-2">
            <div class="price">$<%= product.price %></div>
                <% if current_user && current_user.admin?%>
            <%= link_to 'Edit', edit_product_path(product) %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
                <%end%>
             <%= link_to image_tag(product.image), product%>

            <br><br>
                </div>
    <% end %>
<br>
                 
             </div>
                <%end%>
            </div>
        
        </div>
</div>
        </div>
    </div>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
     </body>
